@model CreateEventVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    string strTitle = "Create Event";
    ViewBag.Title = strTitle;
}


<h1>Create Event</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Events" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinParticipants" class="control-label"></label>
                <input asp-for="MinParticipants" type="range" class="form-control" />
                <span asp-validation-for="MinParticipants" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxParticipants" class="control-label"></label>
                <input asp-for="MaxParticipants" type="range" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" type="range" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxAge" class="control-label"></label>
                <input asp-for="MaxAge" type="range" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegistrationDeadline" class="control-label"></label>
                <input asp-for="RegistrationDeadline" type="date" class="form-control" />
                <span asp-validation-for="RegistrationDeadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParticipantsGender" class="control-label"></label>
                <select asp-for="ParticipantsGender" class="form-control">
                    <option value="0">Any</option>
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                </select>
                <span asp-validation-for="ParticipantsGender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventType" class="control-label"></label>
                <select asp-for="EventType" class="form-control">
                    <option value="0">User</option>
                    <option value="1">Commercial</option>
                </select>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>

